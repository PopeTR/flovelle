<div class="container-home">
  <section class="child-home page1">
  <div id="hero">
    <%= video_tag "lavender.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video"%>
  </div>

  <div class="header-home">
    <%= image_tag "whitelogo.png", width: 150, class: "header-img"%>
    <h1>Fresh Flowers, To Your Door, Every Week</h1>
    <i class="fas fa-chevron-down"></i>
  </div>
</section>


  <section class="child-home page2">
    <div class="container-howitworks">
      <div class="card-header">
        <h3>How it works</h3>
      </div>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/3820994/pexels-photo-3820994.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
          Select your seasonal flowers from our local growers
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1597937913627-6fc09b8a662a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80)">
          Your box of flowers will arrive with information on the local supplier
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
          Enjoy your flowers and recycle your box with us on your next delivery
        </div>
      </div>
    </div>
  </section>
</div>
