<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag "small-sub.jpg", width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @flower_subscription.id %> <small><span class="badge badge-primary"><%= @flower_subscription.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ORDERED ON</strong> <%= @flower_subscription.created_at.to_date %></li>
        <li><strong>SUBSCRIPTION</strong> <%= @flower_subscription.size %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol(@flower_subscription.price_cents) %></li>
        <li><strong>DELIVERY DAY</strong> <%= @flower_subscription.delivery_day %></li>
        </li>
      </ul>
    </div>
  </div>
</div>
